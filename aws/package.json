{
  "name": "suns-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for suns.bz",
  "scripts": {
    "cdk": "sh -c 'if command -v podman >/dev/null 2>&1; then CDK_DOCKER=podman exec cdk \"$@\"; else exec cdk \"$@\"; fi' --",
    "deploy": "npm run cdk -- deploy --all",
    "synth": "npm run cdk -- synth"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "aws-cdk": "^2.100.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.100.0",
    "constructs": "^10.0.0"
  }
}
